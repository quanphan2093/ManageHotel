@page "/Booking"
@model HotelManageRazor.Pages.Customer.BookingModel
@{
    Layout = "_Layout";
}
<style>
    .dropdown-menu {
        width: 100%;
        max-height: 250px; /* Giới hạn chiều cao */
        overflow-y: auto; /* Tạo thanh cuộn */
    }

    .form-floating .dropdown-toggle {
        width: 100%;
        text-align: left;
    }

    .filter-group {
        display: flex;
        justify-content: space-between;
        gap: 15px;
        padding-bottom: 5px;
        margin-bottom: 5px;
        border-bottom: 1px solid #ddd;
    }

        .filter-group div {
            flex: 1;
        }
</style>
<!-- Page Header Start -->
<div class="container-fluid page-header mb-5 p-0" style="background-image: url(~/customer/img/carousel-1.jpg);">
    <div class="container-fluid page-header-inner py-5">
        <div class="container text-center pb-5">
            <h1 class="display-3 text-white mb-3 animated slideInDown">Booking</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb justify-content-center text-uppercase">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item"><a href="#">Pages</a></li>
                    <li class="breadcrumb-item text-white active" aria-current="page">Booking</li>
                </ol>
            </nav>
        </div>
    </div>
</div>
<!-- Page Header End -->
<!-- Booking Start -->
<div class="container-fluid booking pb-5 wow fadeIn" data-wow-delay="0.1s">
    <div class="container">
        <div class="bg-white shadow" style="padding: 35px;">
            <div class="row g-2">
                <div class="col-md-10">
                    <div class="row g-2">
                        <div class="col-md-3">
                            <div class="date" id="date1" data-target-input="nearest">
                                <input type="text" class="form-control datetimepicker-input"
                                       placeholder="Check in" data-target="#date1" data-toggle="datetimepicker" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="date" id="date2" data-target-input="nearest">
                                <input type="text" class="form-control datetimepicker-input" placeholder="Check out" data-target="#date2" data-toggle="datetimepicker" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <select class="form-select">
                                <option selected>Adult</option>
                                <option value="1">Adult 1</option>
                                <option value="2">Adult 2</option>
                                <option value="3">Adult 3</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <select class="form-select">
                                <option selected>Child</option>
                                <option value="1">Child 1</option>
                                <option value="2">Child 2</option>
                                <option value="3">Child 3</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="col-md-2">
                    <button class="btn btn-primary w-100">Submit</button>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Booking End -->
<!-- Booking Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h6 class="section-title text-center text-primary text-uppercase">Room Booking</h6>
            <h1 class="mb-5">Book A <span class="text-primary text-uppercase">Luxury Room</span></h1>
        </div>
        <div class="row g-5">
            <div class="col-lg-6">
                <div class="row g-3">
                    <div class="col-6 text-end">
                        <img class="img-fluid rounded w-75 wow zoomIn" data-wow-delay="0.1s" src="~/customer/img/about-1.jpg" style="margin-top: 25%;">
                    </div>
                    <div class="col-6 text-start">
                        <img class="img-fluid rounded w-100 wow zoomIn" data-wow-delay="0.3s" src="~/customer/img/about-2.jpg">
                    </div>
                    <div class="col-6 text-end">
                        <img class="img-fluid rounded w-50 wow zoomIn" data-wow-delay="0.5s" src="~/customer/img/about-3.jpg">
                    </div>
                    <div class="col-6 text-start">
                        <img class="img-fluid rounded w-75 wow zoomIn" data-wow-delay="0.7s" src="~/customer/img/about-4.jpg">
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="wow fadeInUp" data-wow-delay="0.2s">
                    <form method="post">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" name="name" class="form-control" id="name" placeholder="Your Name">
                                    <label for="name">Your Name</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" name="phone" class="form-control" id="phone" placeholder="Your Phone Number">
                                    <label for="email">Your Phone Number</label>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-floating">
                                    <input type="email" name="email" class="form-control" id="email" placeholder="Your Email">
                                    <label for="email">Your Email</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating date" id="date3" data-target-input="nearest">
                                    <input type="date" name="start" id="checkin" class="form-control " />
                                    <label for="checkin">Check In</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating date" id="date4" data-target-input="nearest">
                                    <input type="date" name="end" class="form-control " id="checkout" placeholder="Check Out" data-target="#date4" />
                                    <label for="checkout">Check Out</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    <button class="btn btn-light dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                                        Select A Room
                                    </button>
                                    <ul class="dropdown-menu p-3" aria-labelledby="dropdownMenuButton">
                                        <li class="filter-group">
                                            <div>
                                                <strong>Floor</strong>
                                                @foreach (var floor in Model.GetRoomFloors)
                                                {
                                                    <div class="form-check">
                                                        <input class="form-check-input floor-filter" type="checkbox" id="floor_@floor" value="@floor">
                                                        <label class="form-check-label" for="floor_@floor">@floor</label>
                                                    </div>
                                                }
                                            </div>
                                            <div>
                                                <strong>Room Type</strong>
                                                @foreach (var type in Model.GetTypeRooms)
                                                {
                                                    <div class="form-check">
                                                        <input class="form-check-input type-filter" type="checkbox" id="type_@type.TypeRoomId" value="@type.TypeRoomId">
                                                        <label class="form-check-label" for="type_@type.TypeRoomId">@type.Name</label>
                                                    </div>
                                                }
                                            </div>
                                        </li>
                                        <li>
                                            <strong>Rooms</strong>
                                            <ul id="roomList" class="list-unstyled">
                                                <!-- Danh sách phòng sẽ được tạo động -->
                                            </ul>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    <textarea class="form-control" placeholder="Special Request" id="message" style="height: 100px"></textarea>
                                    <label for="message">Special Request</label>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-floating">
                                    <select id="payment" name="paymentId">
                                        @foreach(var i in Model.GetPayments)
                                        {
                                            <option value="@i.PaymentTypeId">@i.PaymentMethod</option>
                                        }
                                    </select>
                                    @*<label for="payment">Payment Method</label>*@
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-floating" style="float: right">
                                    <p style="color:red ; font-size:20px; font-weight:bold">1111VND</p>
                                </div>
                            </div>
                            <div class="col-12">
                                <button class="btn btn-primary w-100 py-3" type="submit">Book Now</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Booking End -->

<script>
    const RoomApiUrl = "@Model.RoomApiUrl";

    document.addEventListener("DOMContentLoaded", async function () {
        const dropdownButton = document.getElementById("dropdownMenuButton");
        const roomList = document.getElementById("roomList");

        let rooms = [];

        async function fetchRooms() {
            try {
                const response = await fetch(RoomApiUrl);
                if (!response.ok) throw new Error("Failed to fetch rooms");

                const data = await response.json();
                rooms = data;
                renderRooms();
            } catch (error) {
                console.error("Error fetching rooms:", error);
            }
        }

        function renderRooms() {
            roomList.innerHTML = "";

            let selectedFloors = [...document.querySelectorAll(".floor-filter:checked")].map(cb => cb.value);
            let selectedTypes = [...document.querySelectorAll(".type-filter:checked")].map(cb => cb.value);

            console.log("Selected Floors:", selectedFloors);
            console.log("Selected Types:", selectedTypes);

            let filteredRooms = rooms.filter(room => {
                let matchesFloor = selectedFloors.length === 0 || selectedFloors.includes(room.roomFloor.toString());
                let matchesType = selectedTypes.length === 0 || selectedTypes.includes(room.typeRoomId.toString());
                return matchesFloor && matchesType;
            });

            console.log("Filtered Rooms:", filteredRooms);

            filteredRooms.forEach(room => {
                let li = document.createElement("li");
                li.innerHTML = `
                <div class="form-check">
                        <input class="form-check-input room-checkbox" type="checkbox" name="room" id="room${room.roomId}" value="${room.roomId}">
                    <label class="form-check-label" for="room${room.roomId}">
                       Room: ${room.roomNumber}, Price: $${room.price}
                    </label>
                </div>
            `;
                roomList.appendChild(li);
            });

            updateDropdownText();
        }

        function updateDropdownText() {
            let selectedRoomIds = [...document.querySelectorAll(".room-checkbox:checked")].map(cb => cb.value);

            let selectedRoomNumbers = selectedRoomIds.map(id => {
                let room = rooms.find(r => r.roomId.toString() === id);
                return room ? room.roomNumber : "";
            }).filter(num => num !== "");

            dropdownButton.textContent = selectedRoomNumbers.length > 0 ? selectedRoomNumbers.join(", ") : "Select A Room";
        }

        document.addEventListener("change", function (event) {
            if (event.target.classList.contains("floor-filter") || event.target.classList.contains("type-filter")) {
                renderRooms();
            } else if (event.target.classList.contains("room-checkbox")) {
                updateDropdownText();
            }
        });

        await fetchRooms();
    });
</script>



@page "Error500"
@model HotelManageRazor.Pages.Common._500Model
@{
    Layout = "~/Pages/Shared/error.cshtml";
}
<div class="error-page container">
    <div class="col-md-8 col-12 offset-md-2">
        <img class="img-error" src="@Url.Content("~/admin/assets/images/samples/error-500.png")" alt="System Error">
        <div class="text-center">
            <h1 class="error-title">System Error</h1>
            <p class="fs-5 text-gray-600">
                The website is currently unavailable. Try again later or contact the
                developer.
            </p>
            <a href="Home" class="btn btn-lg btn-outline-primary mt-3">Go Home</a>
        </div>
    </div>
</div>